---
layout: null
---
[
  {% for article in site.articles %}
    {

      "title"    	: "{{ article.title | escape }}",
      "url"      	: "{{ site.baseurl }}{{ article.url }}",
	  "tags"     	: "{{ article.tags | join: ', ' }}",
      "category" 	: "{{ article.category }}",
	  "description" : "{{ article.description | escape }}",
      "date"     	: "{{ article.date }}"

    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]